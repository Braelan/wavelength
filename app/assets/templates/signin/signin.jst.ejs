<% var user_id = current_user.escape('id') %>

<div class="header">




<ul>
  <li class="dream">dreamcatcher</li>
  <li><img class="logo" src="dreamcatcher.png" alt="" /></li>
  <% if (name !== 'undefined') { %>

  <li><a  href= <%="users/" + user_id %> ><%= name %></a>
  <% if (current_user.escape('image') !== "") { %>
    <li> <img class="thumbnail" src= <%= current_user.escape('image') %> /></li>
