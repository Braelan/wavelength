  <div class="close close-style">
    close
  </div>
  <div class="signup-title">
sign up
 </div>
  name
  <input type="text" name="user[name]" value="" placeholder="name"><br>
  password
  <input type="password" name="user[password]" value="" placeholder="password"><br>
  password confirmation
  <input type="password" name="user[password_confirmation]" value="" placeholder="password_confirmation"><br>
  <input type="submit" class="sign-up sign-button" name="name" value="submit">
</form>
</div>
</div>
</div>

