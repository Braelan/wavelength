  <body>




<div class="media-wrap">

  <% if @post.image && @post.image.length > 1 %>
  <img class="title-image" src="<%= @post.image %>" alt="" />
  <% end %>

  <div class="map">
  </div>

  <div class="info">
    <%= @post.info %>
  </div>
    <% if @post.video && @post.video.length > 1 %>
  <div class="video">

  <%= @post.video.html_safe %>

  </div>
  <% end %>

  <% if @post.slide && @post.slide.length > 1%>
  <div class="slides">
  <%= @post.slide.html_safe %>
  </div>
  <% end %>
<% @post.pdfs.each do |pdf| %>
  <div class="pdf">
    <a href= <%= "/pdf/1/?file=" + pdf.link %> > <%= pdf.title %> </a>
    <br>
    <br><br>
    <br>
    <br><br>
  </div>
<%  end %>
</div>

<div class="post-show-wrap">


<div class="post-show">

  <% if @post.front %>
  <%= @post.front %>
  <% end %> <br>

<% if flash[:error] %>
<%=   flash[:error] %>
<% end %>
<form class="" action="/memberships" method="post">
  <input type="hidden" name="authenticity_token" value="form_authenticity_token">
  <input type="hidden" name="post_id" value= <%= @post.id %>>
<a>  <input type="submit" name="name" value="Join"> </a>
</form>
<a href= <%= @post.id.to_s + "/members" %> >Members</a>

<form class="" action="/post_upvotes" method="post">
  <input type="hidden" name="authenticity_token" value="form_authenticity_token">
  <input type="hidden" name="post_id" value= <%= @post.id %>>
  <a> <input type="submit" name="name" value="Upvote"> </a>
</form>


<%="post: " + @post.id.to_s %> <br>
<%= "text: " + @post.back %> <br>
<%= "upvotes: " + @post_upvotes.to_s %> <br>

<a href= <%= @post.id.to_s + "/edit" %> >edit</a>

<input id="lat" type="hidden" value= <%= @post.lat %> >
<input id="lng" type="hidden" value= <%= @post.lng %>>
</div>
</div>
