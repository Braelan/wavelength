<% if (name === 'undefined' || name === "") { %>

  <li>
    <div class="account-wrap">
    <div class=" lead">ACCOUNT</div>
      <div class="sub-wrap">

    <div class="account"><a href="/auth/twitter">Sign in with Twitter</a></div>
    <div class="account"><a href="/auth/facebook">Sign in with Facebook</a></div>
    <div class="account create-account">CREATE ACCOUNT</div>
    <div class="account sign-in-account">SIGN IN</div>
      </div>
  </div>

  </li>
  <% } else {%>
    <li>

      <form class="sign-out-form" action="/session" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" class="sign-out" name="name" value="LOGOUT"></input>
    </form>
  </li>

    <% } %>


</ul>

</div>
<br>
<br>

<div class="sign-up-wrap">


<div class="sign-wrap">
  <div class="sign-subwrap">

<div class="sign-back">

</div>

