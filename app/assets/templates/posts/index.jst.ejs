<script type="text/javascript">
$(document).ready(function(){
  $(".dream").click(function(){
    $('.flip').toggleClass('effect_change')
    console.log("I am the click")
  })
  $(".becomementor").click(function(){
    $('.mentee').toggleClass('sort')
  })
  setTimeout(function(){
    $('.cover').toggleClass('cover-change')
    $('.we-are').toggleClass('message-change')
  }, 5000)
  setTimeout(function(){
    $('em').toggleClass('big-future')
  }, 1000)
  setTimeout(function(){
    $('.cover').toggleClass('disappear')
  }, 15000)
})
var tapped= false
  $('.Pictures > li').on('touchstart', function(e){
    if(!tapped){
      tapped = setTimeout(function(){
        tapped= null
      }, 300);
    } else {
      clearTimeout(tapped);
      tapped=null
      this.getElementsByClassName("front").style["-webkit-transform"]= "rotateY(-180)"
      this.getElementsByClassName("front").style["transform"]= "rotateY(-180)"
      this.getElementsByClassName("back").style["-webkit-transform"]= "rotateY(0)"
      this.getElementsByClassName("back").style["-webkit-transform"]= "rotateY(0)"
    }
    e.preventDefault()
  })
  $('#sorts').sortable();
